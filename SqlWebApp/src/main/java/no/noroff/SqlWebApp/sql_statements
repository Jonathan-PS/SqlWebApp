CREATE TABLE Persons (
    pID int NOT NULL AUTO_INCREMENT,
    FirstName varchar(255) NOT NULL,
    LastName varchar(255) NOT NULL,
    HomeAddress varchar(255),
    DateOfBirth Date,
    PRIMARY KEY(pID)
    );


CREATE TABLE PhoneNumbers (
        pnID int NOT NULL AUTO_INCREMENT,
        pID int NOT NULL,
        PhoneCategory varchar(255),
        Number int,
        PRIMARY KEY(pnID),
        FOREIGN KEY(pID) REFERENCES Persons(pID)
    )




CREATE TABLE Emails (
    eID int NOT NULL ,
    pID int NOT NULL,
    EmailCategory varchar(255),
    Email varchar(255) NOT NULL,
    PRIMARY KEY(eID),
    FOREIGN KEY(pID) REFERENCES Persons(pID)
    );

CREATE TABLE Relationships (
    rID int NOT NULL ,
    p1 int NOT NULL,
    p2 int NOT NULL,
    p1p2 varchar(255) NOT NULL,
    p2p1 varchar(255) NOT NULL,
    PRIMARY KEY(rID),
    FOREIGN KEY(p1) REFERENCES Persons(pID),
    FOREIGN KEY(p2) REFERENCES Persons(pID)
    );


